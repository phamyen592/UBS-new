<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_time_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yenpham.ubs.firstTimeLogin"
    android:background="@color/common_google_signin_btn_text_light_focused">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="First Name"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/fName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Last Name"
        android:ems="10"
        android:id="@+id/lName"
        android:layout_below="@+id/fName"
        android:layout_alignLeft="@+id/fName"
        android:layout_alignStart="@+id/fName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Phone number"
        android:ems="10"
        android:id="@+id/phone"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/utaEmail"
        android:layout_alignStart="@+id/utaEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="UTA Email"
        android:ems="10"
        android:id="@+id/utaEmail"
        android:layout_above="@+id/phone"
        android:layout_alignLeft="@+id/mavId"
        android:layout_alignStart="@+id/mavId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="MavID"
        android:ems="10"
        android:id="@+id/mavId"
        android:layout_below="@+id/lName"
        android:layout_alignLeft="@+id/lName"
        android:layout_alignStart="@+id/lName"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="DOB"
        android:ems="10"
        android:id="@+id/dob"
        android:layout_below="@+id/lName"
        android:layout_alignLeft="@+id/mavId"
        android:layout_alignStart="@+id/mavId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Major (optional)"
        android:ems="10"
        android:id="@+id/major"
        android:layout_below="@+id/phone"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:elevation="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />
</RelativeLayout>
